# Test Environment Variables for Yeyak-mania QA Suite
# Copy this file to .env.test and fill in your test environment values
# Note: The test suite will use the main .env file by default

# Supabase Configuration (Test Environment)
VITE_SUPABASE_URL=https://your-test-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_test_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_test_service_role_key_here

# Google OAuth (Test Environment)
VITE_GOOGLE_CLIENT_ID=your_test_google_client_id_here

# Application URLs
APP_URL=https://yeyak-mania-test.vercel.app

# Test User Credentials (Optional - for authenticated UI tests)
TEST_INSTRUCTOR_EMAIL=test_instructor@example.com
TEST_INSTRUCTOR_PASSWORD=test_password_123
TEST_STUDENT_EMAIL=test_student@example.com
TEST_STUDENT_PASSWORD=test_password_456

# Test Configuration
HEADLESS_MODE=true
SLOW_MO=0
SCREENSHOT_ON_FAILURE=true

# Database Configuration
TEST_DB_CLEANUP=true  # Auto-cleanup test data after tests

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000
API_TIMEOUT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=qa/test.log
